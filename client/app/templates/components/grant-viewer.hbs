<div class="agency-header">

<table class="table table-bordered table-hover">

    <thead class="thead-default thead-grants">
        <tr>
            <th class="thead-default-tr-th grant-number-header">Grant Number</th>
            <th class="thead-default-tr-th">Granting Agency</th>
            <th class="thead-default-tr-th">Title</th>
            <th class="thead-default-tr-th">PI</th>
            <th class="thead-default-tr-th">Status</th>
            <th ></th>
        </tr>
    </thead>

    <tbody>
    {{#each model as |grant|}}
        <tr>
            <td>{{grant.number}}</td>
            <td>{{grant.agency.name}}</td>
            <td>{{grant.document.name}}</td>
            <td>{{grant.pi}}</td>
            <td>
                {{if roleIsPI grant.pistatus}}
                {{if roleIsAgency grant.agencystatus}}
                {{if roleIsInstitution grant.institutionstatus}}
            </td>
            <td>{{grant-action-button grant=grant role=role clickHandler=(action 'updateStatus')}}</td>
        </tr>
    {{else}}
        {{#if institution}}
            <tr><td colspan='7' class='no-grants-error'>
                <h2>This institution has not been associated with any grants yet.</h2>
            </td></tr>
        {{else}}
            {{#if agency}}
                <tr><td colspan='7' class='no-grants-error'>
                    <h2>This agency has not awarded any grants yet.</h2>
                    <p>To create a grant, press the 'Add a grant' button. Once created, the grant will appear in this table.</p>
                </td></tr>
            {{else}}
                <tr><td colspan='7' class='no-grants-error'>
                    <h2>There are no grants.</h2>
                    <p>To create a grant, press the 'Add a grant' button. Once created, the grant will appear in this table.</p>
                </td></tr>
            {{/if}}
        {{/if}}
    {{/each}}
    </tbody>
 </table>


</div>
<div class='creategrantbox'>
    <h3>Create a Grant</h3>
    <p>Creating a new grant will require a grant number, the name of the granting agency, and the name of the institution responsible for the awarded grant. The grant will be automatically assigned to this </p>
    {{#link-to 'institution.detail.create'}}<button class='btn btn-primary'>Create Grant</button>{{/link-to}}
</div>
</div>
